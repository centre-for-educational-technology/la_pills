{{ attach_library('la_pills_timer/main') }}
{{ attach_library('la_pills_timer/timer_active_inactive') }}
{{ attach_library('la_pills/fontawesome') }}
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9">
      {{ new_timer }}
    </div>
    <div class="col-sm-1 text-center">
      <strong>{{ 'Active'|t }}</strong>
    </div>
    <div class="col-sm-2 text-center">
      <strong>{{ 'Actions'|t }}</strong>
    </div>
  </div>
  <div class="groups">
    <div class="group-student">
      <h3>{{ 'Student'|t }}</h3>
      <div class="new-timer-student">

      </div>
      {% if student %}
        {{ student }}
      {% endif %}
    </div>

    <div class="group-teacher">
      <h3>{{ 'Teacher'|t }}</h3>
      <div class="new-timer-teacher">

      </div>
      {% if teacher %}
        {{ teacher }}
      {% endif %}
    </div>

    <div class="group-other">
      <h3>{{ 'Other'|t }}</h3>
      <div class="new-timer-other">

      </div>
      {% if other %}
        {{ other }}
      {% endif %}
    </div>
  </div>
</div>
